{
  "name": "pizza-blitz-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "kitchen-worker",
    "order-api"
  ],
  "scripts": {
    "install:all": "npm install",
    "build": "npm run build --workspaces",
